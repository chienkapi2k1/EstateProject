            <!-- Breakcrumb -->
            <!-- End Breakcrumb -->
            <!-- Header Detail -->
            <section class="head-detail">
                <div class="head-dt-cn">
                    <div class="row">
                        <div class="col-sm-7">
                            <h1>@Model.name </h1>
